{{>layout/header}}

<div id="wrapper">

    {{>layout/sidebar}}
    {{>layout/topnavbar}}

    <!--  my spec page  -->
    <form class="form-inline justify-content-center mt-4" >
        <div class="form-group mb-2">
            <label for="spec">자격증</label>
            <select class="form-control">
                <option>TOEIC</option>
                <option>OPIC</option>
            </select>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="inputAuthDate" >자격증 만료일</label>
            <input type="date" class="form-control ml-1" id="inputAuthDate" placeholder="유효기간">
            <label for="inputScore" class="ml-5">점수</label>
            <input type="text" class="form-control col-sm-3" id="inputScore" placeholder="점수">
            <button type="submit" class="btn btn-primary ml-2">등록</button>
        </div>
    </form>

    <br style="border: 1px solid darkgrey">

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <td>자격증 이름</td>
            <td>만료일</td>
            <td>점수</td>
            <td>삭제</td>
        </tr>
        </thead>
        <tbody id="tbody">
<!--        {.{#posts}.} -->
        <tr>
            <td>{.{id}.}</td> <!-- (2) -->
            <td><a href="">{.{authDate}.}</a></td>
            <td>{.{score}.}</td>
            <td class="btn btn-warning">수정</td>
            <td class="btn btn-danger">삭제</td>
        </tr>
<!--        {.{/posts}.}-->
        </tbody>
    </table>
</div>



{{>layout/footer}}